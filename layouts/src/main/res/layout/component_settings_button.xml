<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_settings_button"
    android:layout_width="@dimen/dimen_toolbar_height"
    android:layout_height="@dimen/dimen_toolbar_height"
    android:background="?attr/actionBarItemBackground"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dimen_toolbar_button_size"
        android:layout_height="@dimen/dimen_toolbar_button_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/settings_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>